<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
		"-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
		"https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="com.puppycrawl.tools.checkstyle.Checker">
	<!-- TreeWalker Checks -->
	<module name="com.puppycrawl.tools.checkstyle.TreeWalker">
		<module name="io.github.jcohy.gradle.checkstyle.filter.RequiresOuterThisFilter"/>
		<module name="io.github.jcohy.gradle.checkstyle.filter.IdentCheckFilter">
			<property name="names" value="logger"/>
			<module
					name="com.puppycrawl.tools.checkstyle.checks.coding.RequireThisCheck">
				<property name="checkMethods" value="false"/>
				<property name="validateOnlyOverlapping" value="false"/>
			</module>
		</module>
		<module name="io.github.jcohy.gradle.checkstyle.check.SpringNoThisCheck">
			<property name="names" value="logger"/>
		</module>
	</module>
</module>
